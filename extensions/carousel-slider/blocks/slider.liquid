<script>
(function() {
  // Namespace all variables and functions to avoid conflicts
  const SHV_SLIDER = {
    nextDom: null,
    prevDom: null,
    carouselDom: null,
    SliderDom: null,
    thumbnailBorderDom: null,
    timeRunning: 3000,
    timeAutoNext: 7000,
    runTimeOut: null,
    runNextAuto: null,
    
    init: function() {
      // Get DOM elements with specific IDs
      this.nextDom = document.getElementById('shv-next');
      this.prevDom = document.getElementById('shv-prev');
      this.carouselDom = document.querySelector('[data-shv-slider]');
      
      if (!this.carouselDom) return; // Exit if slider not found
      
      this.SliderDom = this.carouselDom.querySelector('.shv-slider-track');
      this.thumbnailBorderDom = this.carouselDom.querySelector('.shv-slider-thumbs');
      
      if (!this.SliderDom || !this.thumbnailBorderDom) return;
      
      // Initialize thumbnail
      const thumbnailItems = this.thumbnailBorderDom.querySelectorAll('.shv-slide');
      if (thumbnailItems.length > 0) {
        this.thumbnailBorderDom.appendChild(thumbnailItems[0]);
      }
      
      // Bind events
      if (this.nextDom) {
        this.nextDom.onclick = () => this.showSlider('next');
      }
      
      if (this.prevDom) {
        this.prevDom.onclick = () => this.showSlider('prev');
      }
      
      // Auto-advance
      this.runNextAuto = setTimeout(() => {
        if (this.nextDom) this.nextDom.click();
      }, this.timeAutoNext);
    },
    
    showSlider: function(type) {
      const SliderItemsDom = this.SliderDom.querySelectorAll('.shv-slide');
      const thumbnailItemsDom = this.thumbnailBorderDom.querySelectorAll('.shv-slide');
      
      if (type === 'next') {
        this.SliderDom.appendChild(SliderItemsDom[0]);
        this.thumbnailBorderDom.appendChild(thumbnailItemsDom[0]);
        this.carouselDom.classList.add('shv-next');
      } else {
        this.SliderDom.prepend(SliderItemsDom[SliderItemsDom.length - 1]);
        this.thumbnailBorderDom.prepend(thumbnailItemsDom[thumbnailItemsDom.length - 1]);
        this.carouselDom.classList.add('shv-prev');
      }
      
      clearTimeout(this.runTimeOut);
      this.runTimeOut = setTimeout(() => {
        this.carouselDom.classList.remove('shv-next');
        this.carouselDom.classList.remove('shv-prev');
      }, this.timeRunning);
      
      clearTimeout(this.runNextAuto);
      this.runNextAuto = setTimeout(() => {
        if (this.nextDom) this.nextDom.click();
      }, this.timeAutoNext);
    }
  };
  
  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => SHV_SLIDER.init());
  } else {
    SHV_SLIDER.init();
  }
})();
</script>

