/* SMOOTH Image slide-out animation for PREV */
#{{ section_id }}.prev .shv-slider-track .shv-slide:nth-child(2) .slider-img {
   animation: outFrame-{{ section.id }} 0.5s linear 1 forwards;
   z-index: 3; /* Same as slider-img */
}

@keyframes outFrame-{{ section.id }} {
   to {
       width: 150px;
       height: 220px;
       bottom: 50px;
       top: auto;
       left: 50%;
       transform: translateX(-50%);
       border-radius: 20px;
   }
