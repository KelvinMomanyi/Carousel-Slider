
<link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet"/>

{% if block.settings.selected_collection != blank %}
   {% assign collection = collections[block.settings.selected_collection].products %}
{% else %}
   {% assign collection = collections.all.products %}
{% endif %}

{% assign section_id = 'shv-carousel-' | append: section.id %}

<div class="shv-slider-wrapper" id="{{ section_id }}">
 <!-- list item -->
 <div class="shv-slider-track">
   {% for product in collection %} 
     <div class="shv-slide">
         <img src="{{ product.featured_image.src | img_url: 'master' }}" 
              alt="{{ product.featured_image.alt | escape }}" 
              class="slider-img" 
              width="{{ product.featured_image.width }}" 
              height="{{ product.featured_image.height }}" 
              loading="lazy">
         <div class="shv-slide-content">
               <div class="shv-slide-meta">
                 <a href="{{ product.url }}" 
                    style="color: {{ block.settings.text_color }};
                    text-decoration: none !important;
                    font-size:{{ block.settings.font_size}}px;
                    font-weight:{{ block.settings.font_weight}}">
                    {{ product.title }}
                 </a>
               </div>
               <div class="shv-slide-title">
                <span class="price-span" 
                      style="color: {{ block.settings.text_color2 }};
                      font-size:{{ block.settings.font_size1}}px;
                      font-weight:{{ block.settings.font_weight1}}">
                  {{ product.price | money }}
                </span>
               </div>
               <div class="buttons">
                   <form action="/cart/add" method="post" enctype="multipart/form-data" onsubmit="submitAddToCartForm_{{ section.id }}(this); return false;">
                       <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                       <button type="submit" class="shv-add-to-cart-btn" aria-label="add to cart" style="display: flex !important; align-items: center !important; gap: 8px !important; padding: 8px 12px !important; border: none !important; background: none !important; cursor: pointer !important;">
                         <svg width="{{ block.settings.icon_size }}" height="{{ block.settings.icon_size }}" viewBox="0 0 24 24" fill="none"
                           stroke="{{ block.settings.icon_color}}" 
                           stroke-width="{{ block.settings.icon_thickness}}" 
                           stroke-linecap="round" stroke-linejoin="round">
                           <path d="M9 11a3 3 0 0 0 6 0" />
                           <path d="M8 6.5a4 4 0 0 1 8 0" />
                           <path d="M5 8h14v12a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V8z" />
                         </svg>
                         <p class="hide-on-mobile" style="font-size:{{ block.settings.addToCart_size}}px !important; color:{{ block.settings.addToCart_color}} !important; margin: 0 !important; padding: 0 !important;">Add to Cart</p>
                       </button>
                   </form> 
               </div>
       </div>
     </div>
     {% endfor %}
 </div>
 <!-- thumbnail section -->
 <div class="shv-slider-thumbs">
   {% for product in collection %}
     <div class="shv-slide">
         <img src="{{ product.featured_image.src | img_url: 'large' }}" 
              alt="{{ product.featured_image.alt | escape }}" 
              class="thumbnail-img" 
              width="540" 
              height="720" 
              loading="lazy">
     </div>
   {% endfor %}
 </div>
 <!-- navigation buttons -->
 <div class="shv-slider-nav">
     <button id="prev-{{ section.id }}"><</button>
     <button id="next-{{ section.id }}">></button>
 </div>
 <!-- progress bar -->
 <div class="slider-progress"></div>
</div>

<style>
/* Scoped styles to prevent conflicts */
#{{ section_id }} {
   height: 100vh;
   width: 100%;
   overflow: hidden;
   position: relative;
   font-family: inherit;
   line-height: normal;
   letter-spacing: normal;
   text-align: left;
   box-sizing: border-box;
   z-index: 1; /* Base z-index for the entire slider */
}

#{{ section_id }} * {
   box-sizing: border-box;
}

#{{ section_id }} .shv-slider-track {
   overflow: hidden;
   width: 100%;
   height: 100%;
   position: relative;
   z-index: 2; /* Slightly above wrapper */
}

#{{ section_id }} .shv-slider-track .shv-slide {
   width: 100%;
   height: 100%;
   position: absolute;
   top: 0;
   left: 0;
   right: 0;
   bottom: 0;
   display: flex;
   align-items: center;
   justify-content: center;
}

#{{ section_id }} .shv-slider-track .shv-slide .slider-img {
   width: 100%;
   height: 100%;
   object-fit: cover;
   display: block;
   border: none;
   outline: none;
   position: absolute;
   top: 50%;
   left: 50%;
   transform: translate(-50%, -50%);
   z-index: 1; /* Image below slide content */
}

/* Large screen aspect ratio */
@media screen and (min-width: 1024px) {
   #{{ section_id }} .shv-slider-track .shv-slide .slider-img {
       aspect-ratio: {{ block.settings.aspect_ratio_large }};
       object-fit: {{ block.settings.image_fit_large }};
   }
}

/* Medium screen aspect ratio */
@media screen and (min-width: 678px) and (max-width: 1023px) {
   #{{ section_id }} .shv-slider-track .shv-slide .slider-img {
       aspect-ratio: {{ block.settings.aspect_ratio_medium }};
       object-fit: {{ block.settings.image_fit_medium }};
   }
}

/* Small screen aspect ratio */
@media screen and (max-width: 677px) {
   #{{ section_id }} .shv-slider-track .shv-slide .slider-img {
       aspect-ratio: {{ block.settings.aspect_ratio_small }};
       object-fit: {{ block.settings.image_fit_small }};
   }
}

#{{ section_id }} .shv-slider-track .shv-slide .shv-slide-content {
   position: absolute;
   top: 30%;
   width: 1140px;
   max-width: 80%;
   left: 50%;
   transform: translateX(-50%);
   padding-right: 30%;
   box-sizing: border-box;
   padding-top: 5%;
   text-shadow: 0 5px 10px rgba(0,0,0,0.267);
   animation: goDark 3s;
   z-index: 4; /* Content above image */
}

@keyframes goDark {
   0% { opacity: 0; }
   80% { opacity: 0; }
   100% { opacity: 1; }
}

#{{ section_id }} .shv-slider-track .shv-slide .shv-slide-meta {
   font-weight: bold;
   letter-spacing: 2px;
}

#{{ section_id }} .shv-slider-track .shv-slide .shv-slide-title,
#{{ section_id }} .shv-slider-track .shv-slide .topic {
   font-size: 2em;
   font-weight: bold;
}

#{{ section_id }} .shv-slider-track .shv-slide .topic {
   color: #f1683a;
}

/* thumbnail */
#{{ section_id }} .shv-slider-thumbs {
   position: absolute;
   bottom: 50px;
   left: 50%;
   width: max-content;
   z-index: 5; /* Thumbnails above content */
   display: flex;
   gap: 20px;
   overflow: hidden;
}

#{{ section_id }} .shv-slider-thumbs .shv-slide {
   width: 150px;
   height: 220px;
   flex-shrink: 0;
   position: relative;
}

#{{ section_id }} .shv-slider-thumbs .shv-slide img {
   width: 100%;
   height: 100%;
   object-fit: cover;
   border-radius: 20px;
   display: block;
   border: none;
   outline: none;
}

#{{ section_id }} .shv-slider-thumbs .shv-slide .shv-slide-content {
   color: #fff;
   position: absolute;
   bottom: 10px;
   left: 10px;
   right: 10px;
}

#{{ section_id }} .shv-slider-thumbs .shv-slide .shv-slide-content .shv-slide-title {
   font-weight: 500;
}

#{{ section_id }} .shv-slider-thumbs .shv-slide .shv-slide-content .description {
   font-weight: 300;
}

/* add to Cart */
#{{ section_id }} .shv-add-to-cart-btn {
   background: transparent !important;
   border: none !important;
   padding: 8px 12px !important;
   cursor: pointer !important;
   display: flex !important;
   align-items: center !important;
   justify-content: center !important;
   font-family: inherit !important;
   text-decoration: none !important;
   outline: none !important;
}

#{{ section_id }} .shv-add-to-cart-btn:hover {
   text-decoration: none !important;
}

#{{ section_id }} .shv-add-to-cart-btn i {
   font-size: 4rem;
}

/* arrows */
#{{ section_id }} .shv-slider-nav {
   position: absolute;
   top: 80%;
   right: 52%;
   z-index: 6; /* Navigation above thumbnails */
   width: 300px;
   max-width: 30%;
   display: flex;
   gap: 10px;
   align-items: center;
}

#{{ section_id }} .shv-slider-nav button {
   width: 30px;
   height: 30px;
   border-radius: 50%;
   background-color: rgba(255, 255, 255, 0.95);
   border: none;
   color: #000;
   font-family: monospace;
   font-weight: bold;
   font-size: 18px;
   transition: all .3s ease;
   cursor: pointer;
   outline: none;
   position: relative;
   box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

#{{ section_id }} .shv-slider-nav button::before {
   content: '';
   position: absolute;
   top: -3px;
   left: -3px;
   right: -3px;
   bottom: -3px;
   border-radius: 50%;
   background: conic-gradient(from 0deg, transparent 0deg, #f1683a 180deg, transparent 180deg);
   animation: rotateBorder-{{ section.id }} 2s linear infinite;
   z-index: -1;
}

#{{ section_id }} .shv-slider-nav button::after {
   content: '';
   position: absolute;
   top: -1px;
   left: -1px;
   right: -1px;
   bottom: -1px;
   border-radius: 50%;
   background: rgba(255, 255, 255, 0.95);
   z-index: -1;
}

@keyframes rotateBorder-{{ section.id }} {
   0% {
       transform: rotate(0deg);
   }
   100% {
       transform: rotate(360deg);
   }
}

#{{ section_id }} .shv-slider-nav button:hover {
   background-color: #f1683a;
   color: #fff;
   transform: scale(1.1);
   box-shadow: 0 6px 20px rgba(241, 104, 58, 0.4);
}


/* animation */
#{{ section_id }} .shv-slider-track .shv-slide:nth-child(1) {
   z-index: 2; /* Active slide */
}

/* Show content only for the first (active) slide */
#{{ section_id }} .shv-slider-track .shv-slide:nth-child(1) .shv-slide-content {
   display: flex;
   flex-direction: column;
   align-items: flex-start;
   opacity: 1 !important;
   visibility: visible !important;
}

/* Hide content for all other slides */
#{{ section_id }} .shv-slider-track .shv-slide:not(:nth-child(1)) .shv-slide-content {
   opacity: 0 !important;
   visibility: hidden !important;
   display: none !important;
}

/* General Content Animation */
#{{ section_id }} .shv-slider-track .shv-slide:nth-child(1) .shv-slide-content .shv-slide-meta,
#{{ section_id }} .shv-slider-track .shv-slide:nth-child(1) .shv-slide-content .shv-slide-title,
#{{ section_id }} .shv-slider-track .shv-slide:nth-child(1) .shv-slide-content .topic,
#{{ section_id }} .shv-slider-track .shv-slide:nth-child(1) .shv-slide-content .des,
#{{ section_id }} .shv-slider-track .shv-slide:nth-child(1) .shv-slide-content .buttons {
   position: relative;
   padding: 0px 15px;
   display: inline-block;
   width: auto;
   transform: translateY(50px);
   filter: blur(20px);
   opacity: 0;
   animation: showContent-{{ section.id }} 0.5s 1s linear 1 forwards !important;
   animation-fill-mode: forwards;
   overflow: hidden;
}

/* Background Animation */
{% if block.settings.enable_gradient_background %}
#{{ section_id }} .shv-slider-track .shv-slide:nth-child(1) .shv-slide-content .shv-slide-meta::before,
#{{ section_id }} .shv-slider-track .shv-slide:nth-child(1) .shv-slide-content .shv-slide-title::before,
#{{ section_id }} .shv-slider-track .shv-slide:nth-child(1) .shv-slide-content .topic::before,
#{{ section_id }} .shv-slider-track .shv-slide:nth-child(1) .shv-slide-content .des::before,
#{{ section_id }} .shv-slider-track .shv-slide:nth-child(1) .shv-slide-content .buttons::before {
   content: "";
   position: absolute;
   top: 0;
   left: -100%;
   width: 100%;
   height: 100%;
   background: linear-gradient(to right, {{ block.settings.gradient_color_start }}80 100%, {{ block.settings.gradient_color_end }}1A 100%);
   z-index: -1; /* Gradient behind text */
   animation: bgAnimate-{{ section.id }} 0.8s ease-in-out 0.8s forwards;
   animation-fill-mode: forwards;
   border-radius: {{ block.settings.gradient_border_radius }}px;
   {% if block.settings.gradient_shape == 'rounded' %}
   border-radius: {{ block.settings.gradient_border_radius }}px;
   {% elsif block.settings.gradient_shape == 'pill' %}
   border-radius: 9999px;
   {% elsif block.settings.gradient_shape == 'angled-left' %}
   clip-path: polygon(0 0, 100% 0, 95% 100%, 0% 100%);
   {% elsif block.settings.gradient_shape == 'slashed' %}
   clip-path: polygon(10% 0%, 100% 0%, 90% 100%, 0% 100%);
   {% elsif block.settings.gradient_shape == 'angled-right' %}
   clip-path: polygon(5% 0, 100% 0, 100% 100%, 0% 100%);
   {% elsif block.settings.gradient_shape == 'chevron-right' %}
   clip-path: polygon(0 0, 90% 0, 100% 50%, 90% 100%, 0 100%);
   {% elsif block.settings.gradient_shape == 'chevron-left' %}
   clip-path: polygon(10% 0, 100% 0, 100% 100%, 10% 100%, 0 50%);
   {% elsif block.settings.gradient_shape == 'notch-right' %}
   clip-path: polygon(0 0, 100% 0, 100% 15%, 95% 50%, 100% 85%, 100% 100%, 0 100%);
   {% elsif block.settings.gradient_shape == 'wave' %}
   clip-path: polygon(0 0, 100% 0, 100% 85%, 95% 90%, 90% 95%, 85% 100%, 0 100%);
   {% elsif block.settings.gradient_shape == 'diagonal-cut' %}
   clip-path: polygon(0 0, 100% 0, 85% 100%, 0 100%);
   {% endif %}
}
{% endif %}
/* Keyframes for Background Animation */
@keyframes bgAnimate-{{ section.id }} {
   to {
       left: 0;
   }
}

/* Show Content Keyframes */
@keyframes showContent-{{ section.id }} {
   to {
       transform: translateY(0px);
       filter: blur(0px);
       opacity: 1;
   }
}

/* Individual Animation Delays */
#{{ section_id }} .shv-slider-track .shv-slide:nth-child(1) .shv-slide-content .shv-slide-title {
   animation-delay: 1.2s !important;
}
#{{ section_id }} .shv-slider-track .shv-slide:nth-child(1) .shv-slide-content .topic {
   animation-delay: 1.4s !important;
}
#{{ section_id }} .shv-slider-track .shv-slide:nth-child(1) .shv-slide-content .des {
   animation-delay: 1.6s !important;
}
#{{ section_id }} .shv-slider-track .shv-slide:nth-child(1) .shv-slide-content .buttons {
   animation-delay: 1.8s !important;
}

#{{ section_id }} .shv-slider-track .shv-slide:nth-child(1) .shv-slide-content .shv-slide-title::before {
   animation-delay: 1.4s !important;
}
#{{ section_id }} .shv-slider-track .shv-slide:nth-child(1) .shv-slide-content .topic::before {
   animation-delay: 1.6s !important;
}
#{{ section_id }} .shv-slider-track .shv-slide:nth-child(1) .shv-slide-content .des::before {
   animation-delay: 2s !important;
}
#{{ section_id }} .shv-slider-track .shv-slide:nth-child(1) .shv-slide-content .buttons::before {
   animation-delay: 1.6s !important;
}

/* SMOOTH Image slide-in animation for NEXT */
#{{ section_id }}.next .shv-slider-track .shv-slide:nth-child(1) .slider-img {
   width: 150px;
   height: 220px;
   position: absolute;
   bottom: 50px;
   left: 50%;
   border-radius: 30px;
   transform: translateX(-50%);
   animation: showImage-{{ section.id }} 0.5s linear 1 forwards;
   z-index: 3; /* Same as slider-img */
