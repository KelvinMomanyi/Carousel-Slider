#{{ section_id }}.next .shv-slider-thumbs .shv-slide:nth-last-child(1) {
   overflow: hidden;
   animation: showThumbnail-{{ section.id }} 0.5s linear 1 forwards;
}

@keyframes showThumbnail-{{ section.id }} {
   from {
